<%- model_class = Quiz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question) %>:</strong></dt>
  <dd><%= @quiz.question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answer) %>:</strong></dt>
  <dd><%= @quiz.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @quiz.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:question_name) %>:</strong></dt>
  <dd><%= @quiz.question_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option) %>:</strong></dt>
  <dd><%= @quiz.option %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              quizzes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quiz_path(@quiz), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quiz_path(@quiz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
