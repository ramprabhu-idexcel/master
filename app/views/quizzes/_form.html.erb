<%= form_for @quiz, :html => { :class => "form-horizontal quiz" } do |f| %>

  <% if @quiz.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@quiz.errors.count, "error") %> prohibited this quiz from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @quiz.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :question, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :question, :class => 'form-control' %>
    </div>
    <%=f.error_span(:question) %>
  </div>
  <div class="form-group">
    <%= f.label :answer, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :answer, :class => 'form-control' %>
    </div>
    <%=f.error_span(:answer) %>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type) %>
  </div>
  <div class="form-group">
    <%= f.label :question_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :question_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:question_name) %>
  </div>
  <div class="form-group">
    <%= f.label :option, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :option, :class => 'form-control' %>
    </div>
    <%=f.error_span(:option) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                quizzes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
