<li class="mar-btm">
  <div class=<%= index.odd? ? "media-left" : "media-right"%>>
    <img src=<%= index.odd? ? "http://bootdey.com/img/Content/avatar/avatar1.png" : "http://bootdey.com/img/Content/avatar/avatar2.png" %>
                 class='img-circle img-sm' alt='Profile Picture'>
  </div>
  <% if index.odd? %>
    <div class="media-body pad-hor">
      <div class="speech">
        <a href="#" class="media-heading"><%= event.user.name %></a>
        <p><%= event.message %></p>
        <p class="speech-time">
          <i class="fa fa-clock-o fa-fw"></i><%= created_at(event.created_at) %>
        </p>
      </div>
    </div>
  <% else %>
      <div class="media-body pad-hor speech-right">
        <div class="speech">
          <a href="#" class="media-heading"><%= event.user.name %></a>
          <p><%= event.message %></p>
          <p class="speech-time">
            <i class="fa fa-clock-o fa-fw"></i><%= created_at(event.created_at) %>
          </p>
        </div>
      </div>
  <% end %>
</li>


